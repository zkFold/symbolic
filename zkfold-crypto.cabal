cabal-version:      3.0

name:               zkfold-crypto
version:            0.1.0.0

license:            MIT
license-file:       LICENSE

author:             zkFold team
maintainer:         info@zkfold.io

build-type:         Simple

common options
    default-language: Haskell2010
    ghc-options:
      -fwarn-redundant-constraints
      -Wall
      -Wcompat
      -Widentities
      -Wincomplete-record-updates
      -Wincomplete-uni-patterns
      -Wnoncanonical-monad-instances
      -Wpartial-fields
      -Wredundant-constraints
    default-extensions:
      BangPatterns,
      BinaryLiterals,
      ConstraintKinds,
      DataKinds,
      DefaultSignatures,
      DeriveDataTypeable,
      DeriveFoldable,
      DeriveFunctor,
      DeriveGeneric,
      DeriveTraversable,
      ExistentialQuantification,
      FlexibleContexts,
      FlexibleInstances,
      FunctionalDependencies,
      GADTs,
      GeneralizedNewtypeDeriving,
      InstanceSigs,
      KindSignatures,
      LambdaCase,
      MultiParamTypeClasses,
      MultiWayIf,
      NamedFieldPuns,
      NoImplicitPrelude,
      NumericUnderscores,
      OverloadedStrings,
      PolyKinds,
      RankNTypes,
      RecordWildCards,
      ScopedTypeVariables,
      StandaloneDeriving,
      TupleSections,
      TypeFamilies,
      ViewPatterns

library
    import: options
    exposed-modules:
      ZkFold.Crypto.Algebra.Class
      ZkFold.Crypto.Algebra.Field
      ZkFold.Crypto.Arithmetization.Plonk
      ZkFold.Crypto.Arithmetization.R1CS
      ZkFold.Crypto.EllipticCurve.BLS12_381
      ZkFold.Crypto.EllipticCurve.Class
      ZkFold.Crypto.Protocol.ARK.BabyHyrax
      ZkFold.Crypto.Protocol.ARK.HyperPlonk
      ZkFold.Crypto.Protocol.ARK.Lasso
      ZkFold.Crypto.Protocol.ARK.Nova
      ZkFold.Crypto.Protocol.ARK.Plonk
      ZkFold.Crypto.Protocol.Commitment.KZG
      ZkFold.Crypto.Protocol.Commitment.Sona
      ZkFold.Crypto.Protocol.PIOP.Multivariate.Plonk
      ZkFold.Crypto.Protocol.PIOP.Univariate.Plonk
      ZkFold.Prelude
    build-depends:
      base                          >= 4.9 && < 5,
      containers                                 ,
      pretty-simple                              ,
      poly                                       ,
    hs-source-dirs: src

test-suite zkfold-crypto-test
    import: options
    type: exitcode-stdio-1.0
    main-is: Main.hs
    ghc-options: -rtsopts
    build-depends:
      base                          >= 4.9 && < 5,
      zkfold-crypto                              ,
    hs-source-dirs: test